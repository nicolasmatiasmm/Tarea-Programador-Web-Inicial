<body>


<div class="container" style="margin: 50px auto">
    <div class="row contenedorAgregar">
        <div class="col-6 offset-3">
            <h4 class="text-black text-center">Modificar la novedad.</h4>

            <form method="post" action="/admin/novedades/modificar">
            
            <input type="hidden" value="{{novedad.id}}" name="id">
            <div class="form-group">
            <br>
            <h5></h5>
            <input type="text" placeholder="Titulo"
            value="{{novedad.titulo}}" class="form-control" name="titulo">
            </div>
            <div class="form-group">
                <br>
                <textarea name="subtitulo" id="subtitulo" placeholder="Subtitulo" cols="30" rows="10">{{novedad.subtitulo}}</textarea>
            </div>
            <br>
            <div class="form-group">
            <textarea name="cuerpo" id="cuerpo" placeholder="Cuerpo" cols="30" rows="10">{{novedad.cuerpo}}</textarea>
            </div>
            <br>
            <button type="submit" class="btn btn-primary justify-content-center">Modificar</button>
            <br><br>
            </form>
            
        </div>
             {{#if error}}
           <h2>{{message}}</h2>
              {{/if}}
    </div>
</div>











